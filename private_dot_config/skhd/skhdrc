# focus window
alt - h : yabai -m window --focus west  || yabai -m display --focus west
alt - j : yabai -m window --focus south || yabai -m display --focus south
alt - k : yabai -m window --focus north || yabai -m display --focus north
alt - l : yabai -m window --focus east  || yabai -m display --focus east
alt - x : yabai -m window --focus recent

# swap window
alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east
alt + shift - x : yabai -m window --swap recent

# move window
alt + cmd - h : yabai -m window --warp west
alt + cmd - j : yabai -m window --warp south
alt + cmd - k : yabai -m window --warp north
alt + cmd - l : yabai -m window --warp east

# stack window
alt - s : yabai -m window --stack next
alt - n : yabai -m window --focus stack.next
alt - p : yabai -m window --focus stack.prev

# toggle float / split
alt - f : yabai -m window --toggle float
alt - t : yabai -m window --toggle split
alt - z : yabai -m window --toggle zoom-parent
